<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/coui_toptips_view_icon_btn_size"
        android:layout_height="@dimen/coui_toptips_view_icon_btn_size"
        android:layout_marginStart="@dimen/coui_toptips_view_btn_margin"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"/>
    <com.coui.appcompat.tips.COUIMarqueeTextView
        android:textSize="@dimen/coui_toptips_view_default_text_size"
        android:textColor="?attr/couiColorSecondNeutral"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/coui_toptips_view_title_top_margin"
        android:layout_marginBottom="@dimen/coui_toptips_view_title_top_margin"
        android:minHeight="@dimen/coui_toptips_view_title_min_height"
        android:text=" "
        android:textAlignment="textStart"
        android:layout_marginStart="@dimen/coui_toptips_view_title_start_margin"
        android:layout_marginEnd="@dimen/coui_toptips_view_btn_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ignore"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"/>
    <TextView
        android:textSize="@dimen/coui_toptips_view_default_text_size"
        android:textColor="?attr/couiColorPrimaryText"
        android:ellipsize="end"
        android:id="@+id/ignore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忽略"
        android:maxLines="1"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/action"
        app:layout_constraintTop_toTopOf="@+id/title"/>
    <TextView
        android:textSize="@dimen/coui_toptips_view_default_text_size"
        android:textColor="?attr/couiColorPrimaryText"
        android:ellipsize="end"
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="行动按钮"
        android:maxLines="1"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"/>
    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/coui_toptips_view_icon_btn_size"
        android:layout_height="@dimen/coui_toptips_view_icon_btn_size"
        android:src="@drawable/coui_ic_toptips_close"
        android:layout_marginEnd="@dimen/coui_toptips_view_btn_margin"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"/>
</merge>
