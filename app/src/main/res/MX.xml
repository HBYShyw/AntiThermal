<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="68dp"
    android:layout_marginHorizontal="@dimen/battery_ui_preference_margin_horizontal">
    <ImageView
        android:id="@android:id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginStart="16dp"
        android:forceDarkAllowed="false"/>
    <RelativeLayout
        android:clipToPadding="false"
        android:layout_width="@dimen/power_preference_container_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@android:id/icon"
        android:paddingVertical="@dimen/list_item_title_padding">
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp"
            android:ellipsize="end"
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:maxWidth="@dimen/pm_drain_itme_title_maxwidth"
            android:singleLine="true"/>
        <TextView
            android:textColor="?attr/couiColorPrimary"
            android:ellipsize="end"
            android:id="@+id/pco_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@android:id/title"
            style="@style/TextAppearance.COUI.List.Assignment"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider_line"
        android:background="?attr/couiColorDivider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_background_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72.5dp"
        android:layout_marginEnd="16dp"
        android:forceDarkAllowed="false"/>
</RelativeLayout>
