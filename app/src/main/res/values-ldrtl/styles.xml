<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.COUI" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/coui_textview_text_size</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:elegantTextHeight">@bool/coui_support_elegant_text_height</item>
    </style>
    <style name="Widget.COUI.ExpandableListView" parent="@style/Widget.COUI.ListView">
        <item name="android:groupIndicator">@drawable/coui_expander_group</item>
        <item name="android:childDivider">@drawable/coui_divider_horizontal_default</item>
        <item name="android:indicatorStart">?android:attr/expandableListPreferredItemIndicatorLeft</item>
        <item name="android:indicatorEnd">?android:attr/expandableListPreferredItemIndicatorRight</item>
    </style>
    <style name="Widget.COUI.SeekBar" parent="@android:style/Widget">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/coui_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/coui_progress_horizontal</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:thumb">@drawable/coui_seek_thumb</item>
        <item name="android:thumbOffset">8dp</item>
        <item name="android:mirrorForRtl">true</item>
    </style>
    <style name="Widget.COUI.Toolbar" parent="@android:style/Widget">
        <item name="android:textColor">?attr/couiColorPrimaryNeutral</item>
        <item name="android:paddingLeft">@dimen/toolbar_normal_menu_padding_right</item>
        <item name="android:paddingRight">@dimen/toolbar_normal_menu_padding_left</item>
        <item name="android:minHeight">50dp</item>
        <item name="minTitleTextSize">16dp</item>
        <item name="supportButtonGravity">center_vertical</item>
        <item name="supportCollapseContentDescription">@string/support_abc_toolbar_collapse_description</item>
        <item name="supportCollapseIcon">?attr/homeAsUpIndicator</item>
        <item name="supportContentInsetEnd">0dp</item>
        <item name="supportContentInsetStart">0dp</item>
        <item name="supportMaxButtonHeight">50dp</item>
        <item name="supportSubtitleTextAppearance">@style/TextAppearance.COUI.AppCompatSupport.Toolbar.SubTitle</item>
        <item name="supportTitleMarginBottom">1dp</item>
        <item name="supportTitleMarginTop">4dp</item>
        <item name="supportTitleMargins">0dp</item>
        <item name="supportTitleTextAppearance">@style/TextAppearance.COUI.AppCompatSupport.Toolbar.Title</item>
    </style>
    <style name="Widget.COUI.Toolbar.Button.Navigation" parent="@style/Widget.AppCompatSupport.Toolbar.Button.Navigation">
        <item name="android:paddingLeft">@dimen/coui_action_bar_navigation_padding_end_material</item>
        <item name="android:paddingRight">@dimen/coui_action_bar_navigation_padding_start_material</item>
    </style>
</resources>
