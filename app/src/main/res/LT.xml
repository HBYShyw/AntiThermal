<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_entrance_preference_layout"
    android:background="@drawable/coui_component_card_entrance_large_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:paddingVertical="20dp">
    <com.coui.appcompat.imageview.COUIRoundImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        settings:couiType="round"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@android:id/icon">
        <TextView
            android:textAppearance="?attr/couiTextAppearanceHeadline6"
            android:textColor="?attr/couiColorPrimaryNeutral"
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textAppearance="?attr/couiTextAppearanceDescription"
            android:textColor="?attr/couiColorSecondNeutral"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@android:id/title"
            android:textAlignment="viewStart"
            android:layout_alignStart="@android:id/title"/>
    </RelativeLayout>
</RelativeLayout>
