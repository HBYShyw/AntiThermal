<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/loading_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.coui.appcompat.progressbar.COUILoadingView
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@null"
        android:layout_centerHorizontal="true"
        style="?attr/couiLoadingViewLargeStyle"/>
    <TextView
        android:textSize="@dimen/text_size_forteen_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/settings_safetylegal_activity_loading"
        android:layout_below="@+id/loading_view"
        android:layout_centerHorizontal="true"
        android:alpha="0.3"/>
</RelativeLayout>
