<?xml version="1.0" encoding="utf-8"?>
<com.coui.appcompat.preference.COUICardListWithDividerItemLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:coui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    coui:listIsTiny="true">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/main_layout"
        android:background="@drawable/coui_preference_bg_selector"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/support_preference_min_height"
        android:layout_weight="1"
        android:paddingStart="@dimen/support_preference_title_padding_start_tiny"
        android:paddingEnd="@dimen/support_preference_title_padding_end_tiny">
        <com.coui.appcompat.imageview.COUIRoundImageView
            android:id="@android:id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            coui:couiType="round"
            style="@style/PreferenceIcon"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PreferenceContent">
            <TextView
                android:id="@android:id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/COUIPreferenceTitleStyle"/>
            <TextView
                android:id="@android:id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/support_preference_margin_between_line"
                android:layout_below="@android:id/title"
                style="@style/COUIPreferenceSummaryStyle"/>
            <TextView
                android:id="@+id/assignment"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/support_preference_margin_between_line"
                android:layout_below="@android:id/summary"
                android:forceDarkAllowed="false"
                style="@style/TextAppearance.COUI.List.Assignment"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/radio_layout"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="false">
        <View
            android:background="?attr/couiColorDivider"
            android:layout_width="@dimen/preference_divider_width"
            android:layout_height="@dimen/preference_divider_height"
            android:layout_marginEnd="@dimen/preference_divider_margin_end"
            android:forceDarkAllowed="false"/>
        <RadioButton
            android:layout_gravity="center_vertical"
            android:id="@+id/coui_tail_mark"
            android:background="@null"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@drawable/coui_btn_check_mark"
            android:layout_marginEnd="@dimen/support_preference_title_padding_end_tiny"
            android:forceDarkAllowed="false"/>
    </LinearLayout>
</com.coui.appcompat.preference.COUICardListWithDividerItemLayout>
