<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:forceDarkAllowed="false">
    <RelativeLayout
        android:id="@+id/one_key_text_layout"
        android:background="@drawable/one_key_unsolved_abnormal_issue_background"
        android:paddingBottom="@dimen/single_list_item_title_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:forceDarkAllowed="false">
        <RelativeLayout
            android:id="@+id/one_key_unresolved_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/single_list_item_title_padding"
            android:forceDarkAllowed="false">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:id="@+id/one_key_unresolved_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:minHeight="24dp"
                android:maxLines="10"
                android:layout_alignParentTop="true"
                android:textAlignment="viewStart"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/one_key_unresolved_checkbox"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textColor="?attr/couiColorPrimary"
                android:gravity="top"
                android:id="@+id/one_key_unresolved_sectitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:layout_below="@+id/one_key_unresolved_title"
                android:lineSpacingExtra="2sp"
                android:layout_marginStart="16dp"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.COUI.List.Assignment"/>
            <CheckBox
                android:gravity="center"
                android:id="@+id/one_key_unresolved_checkbox"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:checked="false"
                android:layout_centerVertical="true"
                android:paddingStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.oplus.powermanager.powerusage.view.OneKeyGridView
            android:id="@+id/one_key_unresolved_details"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:listSelector="@android:color/transparent"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="6dp"
            android:columnWidth="40dp"
            android:numColumns="6"
            android:layout_below="@+id/one_key_unresolved_item"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:forceDarkAllowed="false"/>
        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:forceDarkAllowed="false"/>
    </RelativeLayout>
</FrameLayout>
