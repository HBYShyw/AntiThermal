<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/battery_ui_preference_margin_horizontal">
    <RelativeLayout
        android:id="@+id/battery_ui_use_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:forceDarkAllowed="false">
        <LinearLayout
            android:id="@+id/battery_ui_use_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <RelativeLayout
                android:id="@+id/battery_ui_all_use"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:forceDarkAllowed="true">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/coui_color_secondary_neutral"
                    android:id="@+id/battery_ui_all_use_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="@string/battery_ui_use_time_since_last_charge"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="viewStart"
                    android:textFontWeight="400"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp"
                    android:textColor="@color/coui_color_primary_neutral"
                    android:gravity="start|center_vertical"
                    android:id="@+id/battery_ui_all_use_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16.67dp"
                    android:layout_below="@+id/battery_ui_all_use_text"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="16dp"
                    android:textFontWeight="500"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/battery_ui_screen_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="24dp"
                android:forceDarkAllowed="true">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/coui_color_secondary_neutral"
                    android:id="@+id/battery_ui_screen_on_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="@string/battery_ui_screen_on_time_since_last_charge"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="16dp"
                    android:textFontWeight="400"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp"
                    android:textColor="@color/coui_color_primary_neutral"
                    android:gravity="start|center_vertical"
                    android:id="@+id/battery_ui_screen_on_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16.67dp"
                    android:layout_below="@+id/battery_ui_screen_on_text"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="16dp"
                    android:textFontWeight="500"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
