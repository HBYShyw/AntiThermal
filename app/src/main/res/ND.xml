<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.coui.appcompat.emptyview.EmptyStateAnimView
        android:id="@+id/empty_view_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.coui.appcompat.statement.COUIMaxHeightScrollView
        android:id="@+id/empty_view_content"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scrollViewMaxHeight="@dimen/coui_component_empty_text_scroll_max_height"
        style="@style/COUIAlertDialogMessageScrollViewStyle">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/couiTextAppearanceHeadline6"
                android:textSize="16sp"
                android:textColor="?attr/couiColorHintNeutral"
                android:id="@+id/empty_view_title"
                android:layout_width="@dimen/coui_component_empty_group_width"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:fontFamily="sans-serif-regular"
                android:textAlignment="center"/>
            <TextView
                android:textAppearance="?attr/couiTextAppearanceDescription"
                android:textSize="12sp"
                android:textColor="?attr/couiColorHintNeutral"
                android:id="@+id/empty_view_subtitle"
                android:layout_width="@dimen/coui_component_empty_group_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="3"
                android:textAlignment="center"/>
        </LinearLayout>
    </com.coui.appcompat.statement.COUIMaxHeightScrollView>
    <TextView
        android:textAppearance="?attr/couiTextAppearanceButton"
        android:textSize="14sp"
        android:textColor="?attr/couiColorPrimaryText"
        android:id="@+id/empty_view_action"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAlignment="center"/>
</LinearLayout>
