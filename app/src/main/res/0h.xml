<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/rl_float_display"
    android:layout_width="@dimen/coui_snack_intent_bar_max_width"
    android:layout_height="wrap_content">
    <com.coui.appcompat.imageview.COUIRoundImageView
        android:id="@+id/iv_float_icon"
        android:layout_width="@dimen/coui_snack_bar_float_icon_width"
        android:layout_height="@dimen/coui_snack_bar_float_icon_height"
        android:layout_marginTop="@dimen/coui_snack_bar_float_icon_margin_top"
        android:layout_marginBottom="@dimen/coui_snack_bar_float_icon_margin_bottom"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/coui_snack_bar_float_icon_margin_start"
        android:layout_alignParentStart="true"
        app:couiBorderRadius="@dimen/coui_snack_bar_float_icon_radius"
        app:couiType="round"/>
    <com.coui.appcompat.button.COUIButton
        android:textSize="@dimen/coui_snack_bar_float_action_text_size"
        android:textStyle="bold"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/nb_float_action"
        android:layout_width="@dimen/coui_snack_bar_float_action_width"
        android:layout_height="@dimen/coui_snack_bar_float_action_height"
        android:layout_marginTop="@dimen/coui_snack_bar_float_action_margin_bottom"
        android:layout_marginBottom="@dimen/coui_snack_bar_float_action_margin_top"
        android:text="使用"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/iv_float_close"
        android:forceDarkAllowed="false"
        style="?attr/couiSmallButtonColorStyle"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_float_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/coui_snack_bar_icon_margin_top_horizontal"
        android:layout_marginBottom="@dimen/coui_snack_bar_icon_margin_top_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/coui_snack_bar_float_content_margin_start"
        android:layout_marginEnd="@dimen/coui_snack_bar_float_content_margin_end"
        android:layout_toStartOf="@+id/nb_float_action"
        android:layout_toEndOf="@+id/iv_float_icon">
        <TextView
            android:textSize="@dimen/coui_snack_bar_float_content_text_size"
            android:textColor="@color/coui_snackbar_title_color_float"
            android:ellipsize="end"
            android:id="@+id/tv_float_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <TextView
            android:textSize="@dimen/coui_snack_bar_float_content_sub_text_size"
            android:textColor="@color/coui_snackbar_subtitle_color_float"
            android:id="@+id/tv_float_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/coui_snack_bar_float_content_sub_margin_top"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_float_close"
        android:background="@drawable/coui_snackbar_close_bg"
        android:padding="@dimen/coui_snack_bar_float_close_icon_padding"
        android:layout_width="@dimen/coui_snack_bar_float_close_icon_width"
        android:layout_height="@dimen/coui_snack_bar_float_close_icon_height"
        android:layout_marginTop="@dimen/coui_snack_bar_float_close_icon_margin_bottom"
        android:layout_marginBottom="@dimen/coui_snack_bar_float_close_icon_margin_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/coui_dialog_intent_img_close"/>
</RelativeLayout>
