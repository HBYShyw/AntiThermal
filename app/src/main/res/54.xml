<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/rl_notice"
    android:layout_width="@dimen/coui_snack_intent_bar_max_width"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/coui_snack_bar_notice_title_margin_top"
        android:layout_marginStart="@dimen/coui_snack_bar_notice_title_icon_margin_start"
        android:layout_marginEnd="@dimen/coui_snack_bar_notice_title_icon_margin_start">
        <ImageView
            android:id="@+id/iv_notice_title"
            android:layout_width="@dimen/coui_snack_bar_notice_title_icon_width"
            android:layout_height="@dimen/coui_snack_bar_notice_title_icon_height"
            android:layout_marginTop="@dimen/coui_snack_bar_notice_title_icon_margin_top"
            android:layout_marginBottom="@dimen/coui_snack_bar_notice_title_icon_margin_bottom"
            android:src="@drawable/coui_ic_float_snack_bar"
            android:scaleType="centerCrop"
            android:maxWidth="@dimen/coui_snack_bar_notice_title_icon_width"
            android:maxHeight="@dimen/coui_snack_bar_notice_title_icon_height"/>
        <TextView
            android:textSize="@dimen/coui_snack_bar_notice_title_size"
            android:textColor="@color/coui_color_secondary_neutral"
            android:ellipsize="end"
            android:id="@+id/tv_notice_title"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextTtile 文本小标题"
            android:lines="1"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/coui_snack_bar_notice_title_margin_start"
            android:layout_marginEnd="@dimen/coui_snack_bar_notice_title_margin_end"/>
        <ImageView
            android:id="@+id/iv_notice_title_close"
            android:layout_width="@dimen/coui_snack_bar_notice_title_icon_close_width"
            android:layout_height="@dimen/coui_snack_bar_notice_title_icon_close_height"
            app:srcCompat="@drawable/coui_dialog_intent_img_close"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/coui_snack_bar_notice_title_margin_bottom"
        android:layout_marginBottom="@dimen/coui_snack_bar_notice_content_margin_bottom"
        android:layout_below="@+id/ll_notice_title"
        android:layout_marginStart="@dimen/coui_snack_bar_notice_content_margin_start"
        android:layout_marginEnd="@dimen/coui_snack_bar_notice_content_margin_end">
        <com.oplus.anim.EffectiveAnimationView
            android:id="@+id/iv_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/coui_snack_bar_notice_content_icon_margin_end"
            android:layout_alignParentStart="true"
            android:backgroundTint="#4f5254"/>
        <TextView
            android:textSize="@dimen/coui_snack_bar_notice_tv_content_text_size"
            android:textColor="@color/coui_color_primary_neutral"
            android:ellipsize="end"
            android:id="@+id/tv_notice_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please turn on the Wi-Fi to access.Please turn on the Wi-Fi to access."
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/coui_snack_bar_notice_tv_content_margin_end"
            android:layout_toStartOf="@+id/tv_notice_operate"
            android:layout_toEndOf="@+id/iv_notice_content"
            android:forceDarkAllowed="false"/>
        <TextView
            android:textSize="@dimen/coui_snack_bar_notice_tv_content_text_size"
            android:textColor="@color/coui_color_additional_blue"
            android:id="@+id/tv_notice_operate"
            android:paddingTop="@dimen/coui_snack_bar_notice_action_padding_top"
            android:paddingBottom="@dimen/coui_snack_bar_notice_action_padding_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:maxLines="1"
            android:maxEms="4"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/coui_snack_bar_notice_action_padding_start"
            android:paddingEnd="@dimen/coui_snack_bar_notice_action_padding_end"
            android:layout_alignParentEnd="true"
            android:forceDarkAllowed="false"/>
    </RelativeLayout>
</RelativeLayout>
