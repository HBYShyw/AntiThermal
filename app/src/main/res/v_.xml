<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/color_snack_bar"
    android:layout_width="@dimen/coui_snack_bar_max_width"
    android:layout_height="wrap_content">
    <com.oplus.anim.EffectiveAnimationView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/coui_snack_custom_bar_icon_width"
        android:layout_height="@dimen/coui_snack_custom_bar_icon_width"
        android:layout_marginTop="@dimen/coui_snack_bar_multi_line_margin_top"
        android:layout_marginBottom="@dimen/coui_snack_bar_multi_line_margin_bottom"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/coui_snack_bar_margin_start"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/iv_close"
        android:padding="6dp"
        android:layout_width="@dimen/coui_snack_custom_bar_icon_width"
        android:layout_height="@dimen/coui_snack_custom_bar_icon_width"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/coui_snack_custom_bar_margin"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/coui_dialog_img_close"/>
    <TextView
        android:textSize="@dimen/coui_snack_bar_text_size"
        android:textStyle="bold"
        android:textColor="@color/coui_color_white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_action"
        android:layout_width="@dimen/coui_snack_custom_bar_action_width"
        android:layout_height="@dimen/coui_snack_custom_bar_action_height"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/coui_snack_custom_bar_action_padding"
        android:paddingEnd="@dimen/coui_snack_custom_bar_action_padding"
        android:layout_marginStart="@dimen/coui_snack_custom_bar_margin"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/iv_close"
        android:forceDarkAllowed="false"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/coui_snack_custom_bar_margin"
        android:layout_toStartOf="@+id/tv_action"
        android:layout_toEndOf="@+id/iv_icon">
        <TextView
            android:textSize="@dimen/coui_snack_bar_text_size"
            android:textColor="@color/coui_snackbar_title_text_color"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <TextView
            android:textSize="@dimen/coui_snack_bar_sub_text_size"
            android:textColor="@color/coui_snackbar_subtitle_text_color"
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>
