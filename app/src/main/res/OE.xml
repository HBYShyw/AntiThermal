<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">
    <TextView
        android:textSize="14sp"
        android:textColor="@color/battery_ui_text_color_light"
        android:id="@+id/tv_save_power_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/power_save_tips_subtitle"
        android:textAlignment="viewStart"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12sp"
        android:textColor="@color/save_power_dialog_items_color"
        android:id="@+id/suggest_content"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:textAlignment="viewStart"/>
</LinearLayout>
