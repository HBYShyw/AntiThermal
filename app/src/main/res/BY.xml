<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.coui.appcompat.grid.COUIPercentWidthRecyclerView
            android:scrollbarStyle="outsideOverlay"
            android:layout_gravity="center_horizontal"
            android:id="@android:id/list"
            android:paddingBottom="@dimen/coui_list_to_ex_bottom_padding"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:fastScrollEnabled="false"
            app:couiRecyclerGridNumber="@integer/grid_guide_column_preference"
            app:paddingSize="small"
            app:paddingType="cardListType"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/loading_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.coui.appcompat.progressbar.COUILoadingView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/couiLoadingViewLargeStyle"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_safetylegal_activity_loading"
                android:singleLine="true"/>
        </LinearLayout>
    </FrameLayout>
    <include layout="@layout/recycler_search_result_panel"/>
    <FrameLayout
        android:id="@+id/container_searchView_below_toolbar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/background_mask_searchView_below_toolbar"
        style="@style/BackgroundMaskStyle"/>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/power_usage_appBarLayout"
        android:background="?attr/couiColorBackgroundWithCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.oplus.powermanager.fuelgaue.base.RecyclerHeadScaleWithSearchBhv">
        <com.coui.appcompat.toolbar.COUIToolbar
            android:id="@+id/power_usage_layout_toolbar"
            android:paddingTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:supportTitleTextAppearance="@style/textAppearanceSecondTitle"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:background="@null"
            android:paddingTop="@dimen/title_text_padding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_below_toolbar_height"
            android:text="Test"
            android:paddingStart="@dimen/common_margin"/>
        <com.coui.appcompat.grid.COUIPercentWidthFrameLayout
            android:gravity="center_horizontal"
            android:id="@+id/searchViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/power_layout_toolbar_margin"
            app:gridNumber="@integer/grid_guide_column_preference"
            app:paddingSize="small"
            app:paddingType="cardListType"
            app:percentIndentEnabled="true">
            <com.coui.appcompat.searchview.COUISearchViewAnimate
                android:layout_gravity="center_horizontal"
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_height_range_min_height"
                android:paddingStart="@dimen/common_margin"
                android:paddingEnd="@dimen/common_margin"
                app:searchHint="@string/battery_ui_optimization_search_hint"/>
        </com.coui.appcompat.grid.COUIPercentWidthFrameLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:id="@+id/divider_line"
            android:background="@color/appbar_divider_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_background_height"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:alpha="0"
            android:forceDarkAllowed="false"/>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
