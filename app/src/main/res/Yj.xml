<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.coui.appcompat.calendar.COUICalendarDayViewPager
        android:layout_gravity="center_horizontal"
        android:id="@+id/day_picker_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/prev"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:visibility="invisible"
        android:nextFocusDown="@+id/month_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coui_ic_chevron_start"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:nextFocusForward="@+id/month_view"/>
    <ImageButton
        android:id="@+id/next"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:visibility="invisible"
        android:nextFocusDown="@+id/month_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coui_ic_chevron_end"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:nextFocusForward="@+id/month_view"/>
</FrameLayout>
