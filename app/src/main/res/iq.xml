<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.COUIDividerAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_appBarLayout"
    android:background="?attr/couiColorBackgroundWithCard"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">
    <com.coui.appcompat.toolbar.COUIToolbar
        android:id="@+id/custom_toolbar"
        android:paddingTop="@dimen/toolbar_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/toolbar_height"
        app:layout_scrollFlags="noScroll"
        app:supportTitleTextAppearance="@style/textAppearanceSecondTitle"/>
</com.google.android.material.appbar.COUIDividerAppBarLayout>
