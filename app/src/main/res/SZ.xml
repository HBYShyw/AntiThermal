<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/coui_popup_list_window_item_min_height"
    android:paddingHorizontal="@dimen/coui_auto_complete_popup_item_padding_horizontal"
    android:paddingVertical="@dimen/coui_auto_complete_popup_item_padding_vertical">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/popup_list_window_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/coui_auto_complete_popup_list_icon_margin_start"
        android:layout_marginEnd="@dimen/coui_popup_list_window_item_icon_margin_right"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/popup_list_window_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp">
        <TextView
            android:textColor="?attr/couiColorPrimaryNeutral"
            android:layout_gravity="center_vertical"
            android:id="@+id/popup_list_window_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            style="@style/couiTextAppearanceHeadline6"/>
        <TextView
            android:textColor="?attr/couiColorSecondNeutral"
            android:id="@+id/popup_list_window_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textAlignment="viewStart"
            android:textFontWeight="400"
            style="@style/couiTextAppearanceDescription"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/popup_list_window_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_default_delete"
        android:paddingStart="20dp"/>
</LinearLayout>
