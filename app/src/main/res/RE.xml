<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/sipper_none_layout"
        android:paddingTop="@dimen/power_ranking_sipper_none_layout_margin_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view1"
            android:background="@drawable/ic_sipper_none"
            android:visibility="@integer/power_ranking_sipper_none_layout_icon_visibility"
            android:layout_width="@dimen/power_ranking_sipper_none_icon_width"
            android:layout_height="@dimen/power_ranking_sipper_none_icon_height"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textColor="@color/curve_sipper_none"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_sipper_none"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/sipper_refresh_layout"
        android:paddingTop="@dimen/power_ranking_sipper_refresh_layout_margin_top"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textColor="?attr/couiColorSecondNeutral"
            android:gravity="center"
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_sipper_loading"
            android:singleLine="true"
            android:layout_centerHorizontal="true"/>
        <com.coui.appcompat.progressbar.COUILoadingView
            android:visibility="invisible"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/loadingText"
            android:layout_centerHorizontal="true"
            style="?attr/couiLoadingViewLargeStyle"/>
    </RelativeLayout>
</LinearLayout>
