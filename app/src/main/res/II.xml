<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/couiColorSurface"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_title"
        style="@style/COUIComponentStatementTitleStyle"/>
    <com.coui.appcompat.statement.COUIComponentMaxHeightScrollView
        android:id="@+id/scroll_text"
        android:paddingTop="@dimen/coui_component_individual_padding_top"
        android:scrollbars="vertical"
        android:fadingEdgeLength="@dimen/coui_full_page_statement_scroll_fade_length"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:requiresFadingEdge="vertical"
        app:scrollViewMaxHeight="384dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_scroll_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAppearance="?attr/couiTextAppearanceBody"
                android:textColorHighlight="@android:color/transparent"
                android:id="@+id/txt_statement"
                android:paddingBottom="@dimen/coui_component_individual_padding_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:paddingHorizontal="24dp"/>
        </LinearLayout>
    </com.coui.appcompat.statement.COUIComponentMaxHeightScrollView>
    <com.coui.appcompat.button.COUIButton
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/coui_full_page_statement_button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/coui_allow_text"
        style="?attr/couiButtonColorfulDefaultStyle"/>
    <TextView
        android:textSize="@dimen/coui_btn_text_size"
        android:textColor="?attr/couiColorPrimary"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/txt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/coui_component_bottom_sheet_margin"
        android:text="@string/coui_reject_text"
        android:fontFamily="sans-serif-medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/small_land_button_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/coui_component_bottom_sheet_margin"
        android:paddingHorizontal="24dp">
        <com.coui.appcompat.button.COUIButton
            android:id="@+id/small_land_btn_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/coui_reject_text"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="?attr/couiButtonColorfulWhiteStyle"/>
        <com.coui.appcompat.button.COUIButton
            android:id="@+id/small_land_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/coui_allow_text"
            android:layout_weight="1"
            style="?attr/couiButtonColorfulDefaultStyle"/>
    </LinearLayout>
</LinearLayout>
