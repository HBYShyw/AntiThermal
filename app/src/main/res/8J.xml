<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/storage_monitor"
    android:paddingTop="@dimen/M10"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/M10">
    <com.oplus.storage.widget.DataDialogMonitorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?attr/couiTextAppearanceBody"
                android:id="@+id/oplus_data_low_message_5_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/oplus_data_low_message_5"/>
            <TextView
                android:textAppearance="?attr/couiTextAppearanceBody"
                android:id="@+id/oplus_data_low_full_message_4_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/oplus_data_low_full_message_4"/>
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/rm_storage_data_bottom_button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
