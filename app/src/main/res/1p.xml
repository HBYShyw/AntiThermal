<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.coui.appcompat.cardlist.COUICardListSelectedItemLayout
        android:orientation="vertical"
        android:id="@+id/lock_screen_pwd_card"
        android:layout_width="@dimen/coui_input_lock_screen_pwd_setting_width"
        android:layout_height="@dimen/coui_input_lock_screen_pwd_height"
        android:paddingStart="@dimen/coui_input_lock_screen_pwd_card_padding"
        android:paddingEnd="@dimen/coui_input_lock_screen_pwd_card_padding"
        app:couiCardListHorizontalMargin="0dp"
        app:couiCardRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textColor="@color/coui_preference_secondary_text_color"
            android:id="@+id/title"
            android:paddingTop="@dimen/coui_single_input_title_padding_top"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/COUIInputTitleStyle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/header_container"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/edittext_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/header_container"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-6dp"
                android:layout_alignParentEnd="true">
                <CheckBox
                    android:id="@+id/checkbox_password"
                    android:background="@null"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:button="@drawable/coui_edittext_password_icon"
                    android:paddingStart="0dp"/>
                <CheckBox
                    android:id="@+id/checkbox_custom"
                    android:background="@null"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:checked="true"
                    android:layout_marginStart="11dp"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/couiColorHintNeutral"
                android:id="@+id/input_count"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </com.coui.appcompat.cardlist.COUICardListSelectedItemLayout>
    <TextView
        android:textAppearance="@style/couiTextAppearanceCaption"
        android:textColor="?attr/couiColorError"
        android:id="@+id/text_input_error"
        android:paddingTop="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_screen_pwd_card"/>
</androidx.constraintlayout.widget.ConstraintLayout>
