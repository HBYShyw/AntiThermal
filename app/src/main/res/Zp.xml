<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/resultContainer"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/divider"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_background_height"
        android:forceDarkAllowed="false"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider">
        <com.coui.appcompat.grid.COUIPercentWidthListView
            android:layout_gravity="center_horizontal"
            android:id="@+id/resultList"
            android:background="@color/color_transparent"
            android:paddingBottom="@dimen/coui_list_to_ex_bottom_padding"
            android:visibility="gone"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:divider="@null"
            app:couiListGridNumber="@integer/grid_guide_column_preference"
            app:paddingSize="small"
            app:paddingType="cardListType"
            app:percentIndentEnabled="true"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/emptyContainer"
            android:paddingTop="@dimen/search_empty_layout_padding_top"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.oplus.anim.EffectiveAnimationView
                android:id="@+id/empty_animation"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:forceDarkAllowed="false"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/couiColorHintNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_ui_optimization_no_search_result"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
