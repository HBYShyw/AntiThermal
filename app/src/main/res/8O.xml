<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/one_key_main_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/one_key_battery_icon"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/one_key_button_layout"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.coui.appcompat.button.COUIButton
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/power_use_operation_menu"
                android:layout_width="@dimen/one_key_main_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_key_main_margin_top"
                android:layout_marginBottom="@dimen/one_key_main_margin_bottom"
                android:text="@string/one_key_power_save"
                android:lines="2"
                android:splitMotionEvents="false"
                android:forceDarkAllowed="false"
                style="?attr/couiButtonColorfulDefaultStyle"/>
        </LinearLayout>
        <ListView
            android:id="@android:id/list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"/>
        <FrameLayout
            android:id="@+id/inspect_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/one_key_button_layout"
            android:layout_below="@+id/one_key_main_header"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/loading_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.coui.appcompat.progressbar.COUILoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/couiLoadingViewLargeStyle"/>
    </LinearLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/power_onekey_appBarLayout"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.coui.appcompat.toolbar.COUIToolbar
            android:id="@+id/power_onekey_layout_toolbar"
            android:paddingTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_height"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:supportTitleTextAppearance="@style/textAppearanceSecondTitle"/>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
