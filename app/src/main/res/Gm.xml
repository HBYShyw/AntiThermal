<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">
    <RelativeLayout
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp">
        <ImageView
            android:id="@android:id/icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginStart="16dp"
            android:forceDarkAllowed="false"/>
        <RelativeLayout
            android:layout_width="@dimen/power_preference_container_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@android:id/icon">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/pm_drain_itme_title_maxwidth"
                android:singleLine="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/pm_consumption_new_dot"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_status"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@android:id/title"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/item_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coui_btn_next"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/M4"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider_line"
        android:background="?attr/couiColorDivider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_background_height"
        android:layout_alignParentBottom="true"
        android:alpha="1"
        android:layout_marginStart="68.5dp"
        android:layout_marginEnd="16dp"
        android:forceDarkAllowed="false"/>
</RelativeLayout>
