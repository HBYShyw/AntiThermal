<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/wireless_charging_reminder"
    android:background="@drawable/ic_battery_wireless_charging_guide_background_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/wireless_charging_reminder_card"
        android:background="@drawable/ic_battery_wireless_charging_guide_card_background_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:minHeight="141dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.87dp"
            android:src="@drawable/ic_battery_wireless_charging_guide_close"
            android:layout_marginStart="25.87dp"/>
        <View
            android:id="@+id/view"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/close"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#d9000000"
            android:gravity="center"
            android:id="@+id/text"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:maxWidth="264dp"
            android:text="@string/wireless_charge_guide_notification_cartoon_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-regular"/>
        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/text"/>
    </RelativeLayout>
    <com.oplus.anim.EffectiveAnimationView
        android:layout_gravity="center"
        android:id="@+id/wireless_charging_guide_panel_animation"
        android:layout_width="1080px"
        android:layout_height="1080px"
        android:layout_marginBottom="167.65dp"
        app:anim_autoPlay="true"
        app:anim_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
