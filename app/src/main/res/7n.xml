<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/battery_ui_battery_health_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:paddingVertical="2dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:id="@+id/max_capacity_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/single_list_item_title_padding"
        android:layout_marginBottom="@dimen/single_list_item_title_padding"
        android:maxWidth="200dp"
        android:text="@string/battery_health_max_capacity"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        android:forceDarkAllowed="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        android:id="@+id/max_capacity_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/single_list_item_title_padding"
        android:layout_marginBottom="@dimen/single_list_item_title_padding"
        android:maxWidth="88dp"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-regular"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
