<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:outlineSpotShadowColor="@color/coui_tool_tips_shadow_color"
    android:clipToOutline="false">
    <ScrollView
        android:layout_gravity="center_vertical"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <TextView
            android:textColor="@color/coui_color_white"
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.99"
            android:textAlignment="viewStart"
            android:fallbackLineSpacing="false"/>
    </ScrollView>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/dismissIv"
        android:layout_width="@dimen/coui_tool_tips_delete_background_size"
        android:layout_height="@dimen/coui_tool_tips_delete_background_size"
        android:src="@drawable/coui_tool_tips_delete_icon"
        android:contentDescription="@string/coui_tool_tips_delete_icon_description"
        android:layout_marginEnd="12dp"/>
</FrameLayout>
