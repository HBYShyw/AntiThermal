<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/battery_status"
        android:layout_width="312dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp">
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/battery_level_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="42%"
            android:fontFamily="sans-serif-regular"
            android:layout_alignParentStart="true"
            android:textFontWeight="700"/>
        <LinearLayout
            android:gravity="bottom"
            android:id="@+id/battery_charge_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/battery_level_text">
            <ImageView
                android:id="@+id/battery_charge_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:textAppearance="?attr/buttonStyleSmall"
                android:textSize="12dp"
                android:textColor="@color/coui_color_secondary_neutral"
                android:id="@+id/battery_charge_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="500"/>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/buttonStyleSmall"
            android:textSize="12dp"
            android:textColor="@color/coui_color_secondary_neutral"
            android:id="@+id/battery_charge_divider"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text=" | "
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/battery_charge_layout"
            android:textFontWeight="500"/>
        <TextView
            android:textAppearance="?attr/buttonStyleSmall"
            android:textSize="12dp"
            android:textColor="@color/coui_color_secondary_neutral"
            android:id="@+id/battery_left_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/battery_charge_divider"
            android:textFontWeight="500"/>
    </RelativeLayout>
    <com.oplus.powermanager.fuelgaue.view.batteryUI.BatteryLevelView
        android:id="@+id/battery_ui_level_view"
        android:background="@drawable/battery_ui_battery_level_bg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/battery_status"
        android:layout_marginStart="@dimen/M10"
        android:layout_marginEnd="@dimen/M10"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/battery_status"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp">
        <androidx.appcompat.widget.AppCompatButton
            android:textSize="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/battery_life_mode_notificate"
            android:background="@drawable/ic_battery_life_mode_notificate_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="286dp"
            android:maxHeight="40dp"
            android:text="@string/battery_life_mode_notificate_title_new"
            android:maxLines="1"
            android:drawablePadding="4dp"
            android:splitMotionEvents="false"
            android:drawableStart="@drawable/ic_battery_life_mode_notificate"
            android:forceDarkAllowed="false"
            style="@style/Battery_Life_Mode_Notificate"/>
    </LinearLayout>
</RelativeLayout>
