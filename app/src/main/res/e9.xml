<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/wireless_charging_reminder"
    android:background="@drawable/ic_battery_wireless_charging_guide_background_fold_big"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/wireless_charging_reminder_card"
        android:background="@drawable/ic_battery_wireless_charging_guide_card_background_fold_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:maxWidth="470dp"
        android:minHeight="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/cacel_view"
            android:layout_width="wrap_content"
            android:layout_height="42dp">
            <View
                android:visibility="invisible"
                android:layout_width="11dp"
                android:layout_height="42dp"/>
            <ImageView
                android:id="@+id/close"
                android:layout_width="43dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_battery_wireless_charging_guide_close"/>
        </LinearLayout>
        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#d9000000"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="422dp"
            android:text="@string/wireless_charge_guide_notification_cartoon_content"
            android:fontFamily="sans-serif-regular"/>
        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    </LinearLayout>
    <com.oplus.anim.EffectiveAnimationView
        android:layout_gravity="center"
        android:id="@+id/wireless_charging_guide_panel_animation"
        android:layout_width="2094px"
        android:layout_height="1080px"
        android:layout_marginBottom="46.6dp"
        app:anim_autoPlay="true"
        app:anim_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
