<?xml version="1.0" encoding="utf-8"?>
<com.coui.appcompat.calendar.COUICalendarViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/animator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:measureAllChildren="true"
    android:inAnimation="@anim/coui_calendar_picker_fade_in_material"
    android:outAnimation="@anim/coui_calendar_picker_fade_out_material">
    <com.coui.appcompat.calendar.COUICalendarDayPickerView
        android:id="@+id/date_picker_day_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <com.coui.appcompat.calendar.COUICalendarYearView
        android:id="@+id/date_picker_year_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-36dp"
        android:scrollIndicators="bottom"/>
</com.coui.appcompat.calendar.COUICalendarViewAnimator>
