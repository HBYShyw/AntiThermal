<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:oplus="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/oplus_preference"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="28dp"
    android:paddingStart="@dimen/oplus_preference_titel_padding_start"
    android:paddingEnd="@dimen/usage_graph_menu_margin_end">
    <com.coui.appcompat.imageview.COUIRoundImageView
        android:layout_gravity="center"
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        oplus:couiType="round"
        style="@style/PreferenceIcon"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="28dp"
        style="@style/PreferenceContent">
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_title"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_width="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/power_usage_statistics"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="@dimen/support_preference_category_layout_title_margin_end"
            style="@style/COUIPreferenceCategoryStyle.Title"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/popup_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/curve_pop_title_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/popup_tap"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:maxWidth="90dp"
                android:text="@string/battery_ui_power_consumption"
                android:fontFamily="sans-serif-medium"
                android:paddingEnd="0dp"
                android:layout_marginEnd="0dp"
                style="@style/COUIPreferenceCategoryStyle.Title"/>
            <com.coui.appcompat.rotateview.COUIRotateView
                android:layout_gravity="center_vertical"
                android:id="@+id/expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coui_app_expander_close_default"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
